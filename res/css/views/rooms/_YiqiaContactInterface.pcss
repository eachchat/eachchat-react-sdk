}



.yiqia-list-item{
    display: flex;
    align-items: center;
    padding: 0 5px;
    &>span{
        display: flex;
        align-items: center;
        margin-right: 5px;
    }
    &.active{
        background-color: rgba($accent, 0.1);
    }
}